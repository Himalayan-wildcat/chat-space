.header
  .header__login-name
    = current_user.name
  %ul.header__lists
    %li.list
      = link_to new_group_path, method: :get do
        = fa_icon 'pencil-square-o', class: 'icon1'
    %li.list
      = link_to edit_user_path(current_user), method: :get do
        = fa_icon 'cog', class: 'icon2'
.groups
  - current_user.groups.each do |group|
    .each-group
      = link_to group_messages_path(group), method: :get do
        .each-group__name
          = group.name
        .each-group__message
          = group.show_last_message



